@model Delete.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-lg", @placeholder = "First Name", @tabindex = "1" })
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-lg", @placeholder = "Last Name", @tabindex = "2" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email Address", @tabindex = "3" })
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">https://example.com/users/</span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", @placeholder = "User Name", @tabindex = "4" })
            </div>
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password", @tabindex = "5" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @placeholder = "Reenter Password", @tabindex = "6" })
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-6 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
