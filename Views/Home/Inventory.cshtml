@model List<Delete.Models.InventoryViewModel>
@{
    ViewBag.Title = "Inventory";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            DataTables Advanced Tables
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <!-- Tab View-->
            <ul id="mytab1" class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#allItemsTab" role="tab">All Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#inStockTab" role="tab">In Stock</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#outOfStockTab" role="tab">Out of Stock</a>
                </li>
            </ul>
            <div class="tab-content">
                <!-- All Items Tab -->
                <div class="tab-pane active" id="allItemsTab" role="tabpanel">
                    <table id="volunteerTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>MRP</th>
                                <th>Purchase Amount</th>
                                <th>Quantity</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @using (Html.BeginForm("Inventory", "Home", FormMethod.Post, new { id = "addInventoryForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <td>
                                        <input class="form-control input-sm" name="Name" id="nameAdd" type="text">
                                    </td>
                                    <td><input class="form-control input-sm" name="OriginalAmount" id="mrpAdd" type="text"></td>
                                    <td><input class="form-control input-sm" name="PurchaseAmount" id="purchaseAmountAdd" type="text"></td>
                                    <td><input class="form-control input-sm" name="Quantity" id="quantityAdd" type="text"></td>
                                    <td><button type="submit" class="btn btn-primary">Add</button></td>
                                }
                            </tr>
                            @if (Model != null)
                            {
                                foreach (var review in Model)
                                {
                                    <tr>
                                        <td>@review.Name</td>
                                        <td>@review.OriginalAmount</td>
                                        <td>@review.PurchaseAmount</td>
                                        <td>@review.Quantity</td>
                                        <td><button type="button" class="btn btn-primary">Edit</button></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- In Stock Tab -->
                <div class="tab-pane" id="inStockTab" role="tabpanel">
                    <table id="volunteerTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>MRP</th>
                                <th>Purchase Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var review in Model)
                                {
                                    if (review.Quantity > 0)
                                    {
                                    <tr>
                                        <td>@review.Name</td>
                                        <td>@review.Quantity</td>
                                        <td>@review.OriginalAmount</td>
                                        <td>@review.PurchaseAmount</td>
                                    </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Out of Stock Tab -->
                <div class="tab-pane" id="outOfStockTab" role="tabpanel">
                    <table id="volunteerTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>MRP</th>
                                <th>Purchase Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var review in Model)
                                {
                                    if (review.Quantity <= 0)
                                    {
                                    <tr>
                                        <td>@review.Name</td>
                                        <td>@review.Quantity</td>
                                        <td>@review.OriginalAmount</td>
                                        <td>@review.PurchaseAmount</td>
                                    </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>

                
                </div> <!-- End of Tab View -->
                

            </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
