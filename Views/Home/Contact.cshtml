@model List<Delete.Models.VolunteerViewModel>
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            DataTables Advanced Tables
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <table id="volunteerTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Mail Id</th>
                        <th>Phone Number</th>
                        <th>Group</th>
                        <th>Invite</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { id = "addInventoryForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <td><input class="form-control input-sm" name="Name" id="nameAdd" type="text"></td>
                                <td><input class="form-control input-sm" name="MailId" id="mailIdAdd" type="text"></td>
                                <td><input class="form-control input-sm" name="PhoneNumber" id="phNoAdd" type="text"></td>
                                <td><input class="form-control input-sm" name="GroupName" id="phNoAdd" type="text"></td>
                                <td><button type="submit" class="btn btn-primary">Add</button></td>
                        }

                    </tr>
                    @if (Model != null)
                    {
                        foreach (var review in Model)
                        {
                            <tr>
                                <td>@review.Name</td>
                                <td>@review.UserName</td>
                                <td>@review.PhoneNumber</td>
                                <td>@review.GroupName</td>
                                <td><button type="button" class="btn btn-primary">Invite</button></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
